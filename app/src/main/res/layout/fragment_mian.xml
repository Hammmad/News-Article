    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.shekhchilli.newsarticle.MianFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
